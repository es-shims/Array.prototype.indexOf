{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"multiline-comment-style": "off",
		"new-cap": [2, {
			"capIsNewExceptions": [
				"Get",
				"HasProperty",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"ToIntegerOrInfinity",
				"ToObject",
				"ToString",
			],
		}],
		"no-magic-numbers": [1, {
			"ignore": [-1, 0, 1],
		}],
	},
}
